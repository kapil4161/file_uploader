<.form let={f} for={@changeset} action={@action} , multipart={true} >
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :picture %>
  <%= file_input f, :picture %>
  <%= error_tag f, :picture %>

  <div>
    <%= submit "Save" %>
  </div>
</.form>
